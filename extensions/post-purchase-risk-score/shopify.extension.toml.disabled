api_version = "2024-10"

[[extensions]]

uid = "52020758-bcc8-30f1-6314-b15deb8366f24bf7e926"

type = "ui_extension"
name = "Post Purchase Risk Score"
handle = "post-purchase-risk-score"

[[extensions.targeting]]
module = "./src/index.js"
target = "purchase.checkout.block.render"

[extensions.capabilities]
api_access = true
network_access = true

[extensions.settings]
[[extensions.settings.fields]]
key = "api_endpoint"
type = "single_line_text_field"
name = "API Endpoint"
description = "ReturnsX backend API endpoint for risk data"
default = "https://returnsx.vercel.app/api/risk-profile"

[[extensions.settings.fields]]
key = "enable_debug"
type = "boolean"
name = "Enable Debug Mode"
description = "Show debug information in console"